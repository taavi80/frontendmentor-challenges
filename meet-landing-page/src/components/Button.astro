---
const { class: className, ...rest } = Astro.props;
const { text, version, bgColor } = Astro.props;
---

<button class={className} {...rest}
  >{text} <span style={{ color: "#8fe3f9" }}>{version}</span></button
>

<style define:vars={{ bgColor }}>
  button {
    background-color: var(--bgColor);
    color: #ffffff;
    font-family: "RedHat", sans-serif;
    font-size: 1rem;
    font-weight: 700;
    letter-spacing: 0.1px;
    padding: 1rem 2rem;
    border: none;
    border-radius: 25px;
    cursor: pointer;
  }
</style>
